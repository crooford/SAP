---
interface Props {
  title: string;
  src: string;
  alt: string;
}

const { title, src, alt } = Astro.props;
---

<div class="flex flex-col px-8 pt-12 pb-4 border-2 border-[#ffce00] lg:max-w-[350px]">
  <div class="">
    <img
      src={src}
      alt={alt}
      class="w-[77px] animate-fade-down animate-duration-500"
    />
    <h2
      class="uppercase text-2xl md:text-[28px] lg:text-3xl leading-7 font-semibold font-[oswald] text-[#ffce00] mt-8 mb-4 animate-fade animate-duration-300 animate-delay-300"
    >
      {title}
    </h2>
  </div>
  <slot />
</div>
