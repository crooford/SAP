---
interface props {
  title: string;
  category: string;
  description: string;
  imageUrl: string;
  imageAlt: string;
  url: string;
}
const { title, category, description, imageUrl, imageAlt, url } = Astro.props;
---

<div
  class="group img-transform hover:border-[#ffce00] border-2 border-transparent rounded-xl relative cursor-pointer items-center justify-center overflow-hidden transition-shadow hover:shadow-xl hover:shadow-black/30 animate-flip-down animate-once animate-duration-500 animation-delay-300 animate-ease-in-out"
>
  <div class="h-96 w-96 pr-16">
    <img
      class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-125"
      src={imageUrl}
      alt={imageAlt}
    />
  </div>
  <div
    class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent to-black group-hover:from-black/70 group-hover:via-black/60 group-hover:to-black/70"
  >
  </div>
  <div
    class="absolute inset-0 flex translate-y-[60%] flex-col items-center justify-center px-9 text-center transition-all duration-500 group-hover:translate-y-0"
  >
    <h1 class="text-2xl font-thin uppercase text_border_convert">
      {title}
    </h1>
    <h1 class="text-3xl font-thin mb-2 uppercase text_border_convert">
      {category}
    </h1>
    <p
      class="mb-3 text-lg italic text-white opacity-0 transition-opacity duration-300 group-hover:opacity-100"
    >
      {description}
    </p>
    <a href={url} class="rounded-full bg-neutral-900 py-2 px-6 font-com text-sm capitalize text-white shadow shadow-black/60 hover:bg-transparent hover:border-[#ffce00] hover:text-[#ffce00] border-2 border-transparent transition duration-300 ease-in-out">Ver m√°s</a>
  </div>
</div>
