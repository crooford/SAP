---
import "@fontsource/roboto/";
import "@fontsource-variable/oswald";

interface Props {
  title: string;
  
  BgBody: string;
}

const {
  title,
  
  BgBody,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/logo.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;400;700&family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
  </head>
  <body class={BgBody == "yes" ? "bg-body" : "non-bg-body"}>
    
    <slot />
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
  </body>
</html>
<style is:global>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "roboto", "Helvetica";
  }
  .active-tab {
    color: #ffce00;
    border-top: #ffce00 solid 2px;
  }
  .no-active-tab {
    color: #fff;
    border-top: transparent solid 2px;
    transition: all 0.15s linear;
  }
  .no-active-tab:hover {
    color: #ffce00;
    border-top: #ffce00 solid 2px;
  }
  .sap__text__slogan {
    backdrop-filter: blur(1px);
  }
  .text_border_convert {
    -webkit-text-stroke: 2px #fff;
    color: transparent;
  }
  .sap__text__slogan span {
    font-size: 4rem;
    font-weight: 900;
    -webkit-text-stroke: 2px #fff;
    color: transparent;
    letter-spacing: 2px;
  }
  .img-transform {
    -webkit-filter: grayscale(100%);
    filter: grayscale(100%);
  }
  .img-transform:hover {
    -webkit-filter: grayscale(0%);
    filter: grayscale(0%);
  }
  .bg-body {
    background-image: url(/assets/background_home.png) !important;
    background-color: #000000;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }
  .non-bg-body {
    background-color: #000000;
  }
  .scrolled {
      background-color: #00000080;
      backdrop-filter: saturate(180%) blur(12px);
      transition: background-color 0.4s ease-in-out;
    }
</style>
<script>
     addEventListener("scroll", () => {
      const header = document.getElementById("landing-header");
      const scroll = window.scrollY;
      if (scroll > 0) {
        header.classList.add("scrolled");
      } else {
        header.classList.remove("scrolled");
      }
    });
