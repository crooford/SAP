---
interface Props {
  title: string;
  src: string;
  alt: string;
}

const { title, src, alt } = Astro.props;
---

<div class="flex flex-col w-[320px]">
  <img
    src={src}
    alt={alt}
    class="w-[77px] animate-fade-down animate-duration-500"
  />
  <h2
    class="uppercase text-[28px] leading-7 font-semibold font-[oswald] text-[#ffce00] my-6 animate-fade animate-duration-300 animate-delay-300"
  >
    {title}
  </h2>
  <slot />
</div>
