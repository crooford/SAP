---
interface Props {
  imgUrl: string;
  altData: string;
}
const { imgUrl, altData } = Astro.props;
---

<div class="swiper-slide w-20">
  <img src={imgUrl} alt={altData} class="swiper-slide-img" />
</div>

<style>
  .swiper-slide {
    background-position: center;
    background-size: cover;
    width: 300px;
    height: 350px;
  }
  .swiper-slide-img {
    display: block;
    width: 100%;
  }
</style>
