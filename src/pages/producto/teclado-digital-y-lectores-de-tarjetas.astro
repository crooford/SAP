---
import Carousel from "../../components/Carousel.astro";
import CarouselProducts from "../../components/CarouselProducts.astro";
import Item from "../../components/Item.astro";
import ItemCarousel from "../../components/ItemCarousel.astro";
import ModelDoor from "../../components/products/ModelDoor.astro";
import LayoutDoors from "../../layouts/LayoutDoors.astro";

const items = [
  {
    imgUrl: "/assets/teclado-digital/t-1.png",
    altData: "teclado digital",
  },
  {
    imgUrl: "/assets/teclado-digital/t-2.png",
    altData: "teclado digital",
  },
  {
    imgUrl: "/assets/teclado-digital/t-3.png",
    altData: "teclado digital",
  },
  {
    imgUrl: "/assets/teclado-digital/t-4.png",
    altData: "teclado digital",
