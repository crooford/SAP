---
import Counter from "../components/Counter.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="SAP" BgBody="no" url="">
  <Navbar
    HomeState="active"
    ProductosState=""
    GaleriaState=""
    ServiciosState=""
    CatalogoState=""
    NosotrosState=""
    OficinasState=""
    ContactoState=""
    slot="header"
  />
  <main
    class="min-h-screen bg-[url(/assets/home/background.webp)] bg-cover bg-no-repeat bg-top bg-fixed"
  >
    <section
      class="pt-28 px-8 md:pt-40 2xl:pt-56 lg:px-16 grid pb-6 min-h-screen min-w-screen bg-black/40"
    >
      <article>
        <h1
          class="text-white uppercase text-5xl lg:text-7xl 2xl:text-[6rem] font-bold font-[oswald] mb-10 tracking-wider"
        >
          sistemas automáticos peatonales
        </h1>
        <p
          class="text-lg lg:text-2xl text-white font-medium uppercase tracking-wide"
        >
          soluciones en accesos
        </p>
        <p class="text-white text-lg lg:text-xl font-medium">
          Somos <span class="text-[#ffce00] italic font-bold">número uno</span>
           en puertas automáticas en todo México.
        </p>

        <div class="flex fle-col md:flex-row gap-4 md:gap-8 items-center mt-7">
          <Counter />
          <div>
            <p
              class="text-white text-lg lg:text-2xl font-medium uppercase -ml-6 pt-2"
            >
              Puertas instaladas <br class="hidden md:block" />
               en LatinoAmérica
            </p>
          </div>
        </div>
        <div class="pt-8">
          <a
            href="/productos"
            class="py-2 px-6 bg-black rounded-full text-[#ffce00] flex items-center gap-2 w-fit hover:scale-110 hover:underline transition-all uppercase [&:hover>img]:animate-spin [&:hover>img]:animate-once [&:hover>img]:animate-duration-500 [&:hover>img]:ease-in-out"
          >
            <!-- <svg
              class="icon icon-tabler icon-tabler-chevron-right"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M9 6l6 6l-6 6"></path>
            </svg> -->
            <img src="/assets/icono-flecha.png" class="w-3" alt="" />
             conoce nuestros productos aquí</a
          >
        </div>
      </article>
      <article
        class="flex flex-col lg:flex-row self-end lg:justify-between lg:items-center"
      >
        <p
          class="text-white text-base 2xl:text-lg text-center uppercase opacity-70"
        >
          Marcas que han confiado en nosotros:
        </p>
        <!-- <div
          class="flex flex-col lg:flex-row items-center justify-center gap-10 [&>img]:h-16 md:[&>img]:h-12 py-8 [&>img]:opacity-40"
        >
          
          <img src="/assets/logos/walmart.png" alt="logo walmart" />
        </div> -->
        <div
          class="swiper mySwiper w-[300px] md:w-[600px] lg:w-[800px] 2xl:w-[1200px] h-20"
        >
          <div
            class="swiper-wrapper [&>div>img]:opacity-60 [&>div>img]:object-contain [&>div]:h-20 [&>div>img]:px-4"
          >
            <div class="swiper-slide">
              <img
                src="/assets/logos/asur.png"
                alt="logo aeropuertos del sureste"
                title="ASUR"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/oma-color.png"
                alt="logo de oma"
                title="OMA"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/petco.png"
                alt="logo de petco"
                title="PETCO"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/gap.png"
                alt="logo de gap"
                title="GAP"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/ley.gif"
                alt="logo de ley"
                title="LEY"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/pricemart.png"
                alt="logo de pricemart"
                title="PRICEMART"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/christus-muguerza.png"
                alt="logo hospital christus muguerza"
                title="CHRISTUS MUGUERZA"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/bmw.png"
                alt="logo bmw"
                title="BMW"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/aeropuerto-benito.png"
                alt="logo aeropuerto benito"
                title="AEROPUERTO BENITO"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/homedepot.png"
                alt="logo home depot"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/walmart.png"
                alt="logo walmart"
                title="WALMART"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/hospital-angeles.png"
                alt="logo hospital angeles"
                title="HOSPITAL ANGELES"
                class="w-full h-full"
              />
            </div>

            <div class="swiper-slide">
              <img
                src="/assets/logos/palacio-de-hierro.png"
                alt="logo palacio de hierro"
                class="w-full h-full"
              />
            </div>
            <div class="swiper-slide">
              <img
                src="/assets/logos/liverpool.png"
                alt="logo liverpool"
                class="w-full h-full"
              />
            </div>
          </div>
        </div>
      </article>
    </section>
  </main>
</Layout>

<script
  is:inline
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"
  slot="ajax"></script>
<script
  is:inline
  src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.17.0/TweenMax.min.js"
  slot="tween"></script>

<style>
  .counter-bg {
    position: relative;
  }
  .counter-bg::before {
    content: "";
    background-image: url("/assets/background_home.png");
    background-size: cover;
    background-repeat: no-repeat;
    position: absolute;
    top: 0px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    opacity: 0.8;
  }
</style>
<script is:inline>
  var swiper = new Swiper(".mySwiper", {
    watchSlidesProgress: true,
    slidesPerView: 7,
    loop: true,
    autoplay: {
      delay: 2500,
      disableOnInteraction: false,
    },
  });
</script>
