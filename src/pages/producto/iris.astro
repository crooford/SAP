const items = [

  {
    imgUrl: "/assets/iris/i-1.png",
    altData: "lector iris",
  },
  {
    imgUrl: "/assets/iris/i-1.png",
    altData: "lector iris",
  },
  {
    imgUrl: "/assets/iris/i-1.png",
