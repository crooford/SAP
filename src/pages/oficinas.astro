---

<Layout
  title="SAP"
  HomeState=""
  ProductosState=""
  ServiciosState=""
  CatalogoState=""
  NosotrosState=""
  OficinasState="active"
  ContactoState=""
  BgBody="yes"
>
  <main class="w-full min-h-screen h-full pt-36">
    <section class="flex flex-col mx-auto max-w-[1400px] bg-black/80 p-8">
      <header class="[&>p]:text-white [&>p]:mb-4 [&>p]:text-lg mb-6">
        <h1 class="text-5xl text-[#ffce00] uppercase font-extrabold mb-10">
          {meta.title}
        </h1>
        <p>
          {meta.description.slice(0, 68)}
          <br />
          {meta.description.slice(69, 128)}
        </p>
        <p>
          {meta.description.slice(129, 188)}
        </p>
      </header>
      <div class="grid grid-cols-3 gap-6 mb-10">
        {
          sedes.map((sede) => (
            <Place
              title={sede.name}
              address={sede.address}
              phone={sede.phone}
            />
          ))
        }
      </div>
      <p class="text-white text-lg">{meta.footer}</p>
    </section>
  </main>
</Layout>
