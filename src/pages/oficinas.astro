};

export let sedes = [
  {
    urlMaps:"https://goo.gl/maps/hxiTGoR3P4GHPXTG6",
    name: "SAP Ciudad de México",
    address:
      "Av. Revolución No. 789, Col. Mixcoac, Del. Benito Juárez, México, D.F.",
    phone: "555 611 2215",
  },
  {
    urlMaps:"https://goo.gl/maps/7Ab2g1y1r9CdwuPG9",
    name: "SAP Monterrey",
    address:
      "Av. Raúl Rangel Frías No. 562, Col Burócratas del Estado, Nvo. León, Monterrey. C.P. 64380",
    phone: "818 311 4321 / 833 140 9986",
  },
  {
    urlMaps:"https://goo.gl/maps/hxiTGoR3P4GHPXTG6",
    name: "SAP Cancún y Peninsula de yucatán",
    address:
      "Av. Holbox SM.11, Mz 5, LT 21, Fracc. Santa María Sike, C.P. 77504, Cancún Quintana Roo.",
    phone: "998 267 7655 / 998 880 5715",
  },
  {
    urlMaps:"https://goo.gl/maps/2qg3GdswS2nSJ8w9A",
    name: "SAP Baja California Norte",
    address:
      "Av. Madero No. 2386, Col. Residencias, C.P. 83448, San Luis Rio Colorado, Son.",
    phone: "653 534 4103 / 653 849 6335",
  },

  {
    urlMaps:"https://goo.gl/maps/hxiTGoR3P4GHPXTG6",
