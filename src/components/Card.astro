---
interface Props {
  title: string;
  src: string;
  alt: string;
}

const { title, src, alt } = Astro.props;
---

<div class="py-4">
  <div class="flex flex-col md:w-[320px] items-center justify-center">
    <img
      src={src}
      alt={alt}
      class="w-[77px] animate-fade-down animate-duration-500"
    />
    <h2
      class="uppercase md:text-[28px] text-3xl text-center leading-7 font-semibold font-[oswald] text-[#ffce00] my-6 animate-fade animate-duration-300 animate-delay-300"
    >
      {title}
    </h2>
  </div>

  <slot />
</div>
