  title="SAP | Puertas telescópicas"
  doorCategory="Puertas telescópicas"
  giratoriaState=""
  corredizaState=""
  batienteState=""
  telescopicaState="active"
  plegadizaState=""
  seguridadState=""
  torniqueteState=""
  huellaDigitalState=""
  magneticaState=""
  irisState=""
  curvaState=""
  tecladoDandLectorTarjetaState=""
