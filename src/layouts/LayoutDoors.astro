---
import "@fontsource/roboto/";
import "@fontsource-variable/oswald";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  doorCategory: string;

  giratoriaState: string;
  corredizaState: string;
  batienteState: string;
  telescopicaState: string;
  plegadizaState: string;
  seguridadState: string;
  torniqueteState: string;
  huellaDigitalState: string;
  magneticaState: string;
  irisState: string;
  curvaState: string;
  tecladoDandLectorTarjetaState: string;
  icuState: string;
}

const {
  title,
  doorCategory,
  giratoriaState,
  corredizaState,
  batienteState,
  telescopicaState,
  plegadizaState,
  seguridadState,
  torniqueteState,
  huellaDigitalState,
  magneticaState,
  irisState,
  curvaState,
  tecladoDandLectorTarjetaState,
  icuState,
} = Astro.props;
---

<!doctype html>
<html lang="es" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Sistemas automaticos peatonales | Número uno en puertas
    automáticas en todo México y el Caribe."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;400;700&family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- <ViewTransitions /> -->
  </head>
  <body>
    <header>
      <nav
        class="fixed top-0 lg:top-0 py-2 lg:py-4 z-50 w-full"
        id="landing-header"
      >
        <div class="px-3 py-3 lg:pl-0 lg:py-0 lg:pr-4">
          <div class="flex flex-wrap items-center justify-between">
            <div class="flex items-center justify-start">
              <button
                data-drawer-target="logo-sidebar"
                data-drawer-toggle="logo-sidebar"
                aria-controls="logo-sidebar"
                type="button"
                class="inline-flex items-center p-2 mr-4 text-sm text-white rounded-lg lg:hidden hover:bg-[#ffce00] focus:outline-none focus:ring-2 focus:ring-[#ffce00]"
              >
                <span class="sr-only">Open sidebar</span>
                <svg
                  class="w-7 h-7"
                  aria-hidden="true"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    clip-rule="evenodd"
                    fill-rule="evenodd"
                    d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"
                  ></path>
                </svg>
              </button>
              <a href="/">
                <img
                  src="/assets/home/new-logo.png"
                  alt="logo sap"
                  class="h-16 2xl:h-20"
                />
              </a>
            </div>
            <button
              data-collapse-toggle="navbar-default"
              type="button"
              class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-white rounded-lg md:hidden hover:bg-[#ffce00] mr-4"
              aria-controls="navbar-default"
              aria-expanded="false"
            >
              <span class="sr-only">Open main menu</span>
              <svg
                class="w-8 h-8"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 17 14"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M1 1h15M1 7h15M1 13h15"></path>
              </svg>
            </button>
            <div
              class="hidden w-full md:block md:w-auto bg-black md:bg-transparent lg:pr-4 sm:pr-2"
              id="navbar-default"
            >
              <ul
                class="font-medium flex flex-col p-4 md:p-0 mt-4 md:flex-row 2xl:space-x-1 md:mt-0 lg:[&>li>a]:px-5 sm:[&>li>a]:px-3 md:[&>li>a]:py-4 [&>li>a]:block [&>li>a]:py-2 [&>li>a]:px-4 [&>li>a]:uppercase md:[&>li>a]:text-sm 2xl:[&>li>a]:text-base"
              >
                <li>
                  <a class="no-active-tab" href="/">Inicio</a>
                </li>
                <li>
                  <a class="active-tab" href="/productos">Productos</a>
                </li>
                <!-- <li>
                  <a
                    class="no-active-tab"
                    href="/galeria">galería</a
                  >
                </li> -->
                <li>
                  <a class="no-active-tab" href="/servicios">Servicios</a>
                </li>
                <li>
                  <a class="no-active-tab" href="/catalogo">CATÁLOGO</a>
                </li>
                <li>
                  <a class="no-active-tab" href="/nosotros">Nosotros</a>
                </li>
                <li>
                  <a class="no-active-tab" href="/oficinas">Oficinas</a>
                </li>
                <li>
                  <a class="no-active-tab" href="/contacto">Contacto</a>
                </li>
              </ul>
            </div>
            <div class="w-56 flex items-center mr-20">
              <img
                src="/assets/home/stanley-2.png"
                alt=""
                class="hidden xl:block"
              />
            </div>
          </div>
        </div>
      </nav>
    </header>
    <main
      class="flex flex-row min-h-screen overflow-hidden bg-[url(/assets/home/background_products.png)] bg-center bg-fixed"
    >
      <section
        class="flex flex-row items-start pb-12 pt-24 min-w-full w-screen"
      >
        <aside
          id="logo-sidebar"
          class="fixed top-0 left-0 z-40 w-72 h-screen pt-20 md:pt-28 lg:pt-20   transition-transform -translate-x-full lg:translate-x-0 0 bg-black lg:bg-transparent"
          aria-label="Sidebar"
        >
          <div class="w-full h-full px-5 pt-4 pb-16 lg:px-3 lg:py-5  overflow-y-auto">
            <ul
              class="[&>li>a]:uppercase [&>li>a]:px-4 [&>li>a]:py-2 [&>li]:py-1 lg:[&>li>a]:p-1 lg:[&>li]:py-1 2xl:[&>li>a]:p-2 lg:pl-6 lg:pt-4 [&>li>a]:block"
            >
              <li>
                <header class="py-0 lg:py-2 2xl:py-0 2xl:pb-2">
                  <a href="/productos"
                    ><h1
                      class="text-5xl font-extrabold text_border_convert uppercase font-[oswald]"
                    >
                      productos
                    </h1></a
                  >
                </header>
              </li>
              <li>
                <a
                  href="/producto/puertas-giratorias"
                  class={giratoriaState == "active"
                    ? "active-tab"
                    : "no-active-tab"}>Puertas giratorias</a
                >
              </li>
              <li>
                <a
                  href="/producto/puertas-corredizas"
                  class={corredizaState == "active"
                    ? "active-tab"
                    : "no-active-tab"}>Puertas corredizas</a
                >
              </li>
              <li>
                <a
                  href="/producto/puertas-batientes"
                  class={batienteState == "active"
                    ? "active-tab"
                    : "no-active-tab"}>Puertas batientes</a
                >
              </li>
              <li>
                <a
                  href="/producto/puertas-telescopicas"
                  class={telescopicaState == "active"
                    ? "active-tab"
                    : "no-active-tab"}>Puertas telescópicas</a
                >
              </li>
              <li>
                <a
                  href="/producto/puertas-plegadizas"
                  class={plegadizaState == "active"
                    ? "active-tab"
                    : "no-active-tab"}>Puertas plegadizas</a
                >
              </li>
              <li>
                <a
                  href="/producto/puertas-icu"
                  class={icuState == "active" ? "active-tab" : "no-active-tab"}
                  >Puertas ICU</a
                >
              </li>
              <li>
                <a
                  href="/producto/curvas"
                  class={curvaState == "active"
                    ? "active-tab"
                    : "no-active-tab"}>puertas curvas</a
                >
              </li>
              <li>
                <a
                  href="/producto/puertas-de-seguridad"
                  class={seguridadState == "active"
                    ? "active-tab"
                    : "no-active-tab"}>puertas de seguridad</a
                >
              </li>
              <li>
                <a
                  href="/producto/torniquetes"
                  class={torniqueteState == "active"
                    ? "active-tab"
                    : "no-active-tab"}>torniquetes</a
                >
              </li>
              <li>
                <a
                  href="/producto/huella-digital"
                  class={huellaDigitalState == "active"
                    ? "active-tab"
                    : "no-active-tab"}>huella digital</a
                >
              </li>
              <li>
                <a
                  href="/producto/chapas-magneticas"
                  class={magneticaState == "active"
                    ? "active-tab"
                    : "no-active-tab"}>chapas magnéticas</a
                >
              </li>
              <li>
                <a
                  href="/producto/iris"
                  class={irisState == "active" ? "active-tab" : "no-active-tab"}
                  >iris</a
                >
              </li>
              <li>
                <a
                  href="/producto/teclado-digital-y-lector-de-tarjetas"
                  class={tecladoDandLectorTarjetaState == "active"
                    ? "active-tab"
                    : "no-active-tab"}
                  >teclado digital y lector de tarjetas</a
                >
              </li>
            </ul>
          </div>
        </aside>

        <section
          class="lg:ml-[290px] lg:w-[calc(100vw-300px)] 2xl:ml-[300px] px-8 lg:pl-2 pt-6 2xl:pr-24"
        >
          <div class="flex">
            <img
              src="/assets/icono-flecha.png"
              alt="flecha veloz"
              class={"object-contain mr-4 " +
                (doorCategory == "Puertas corredizas"
                  ? " animate-fade-left animate-once animate-delay-500 animate-duration-300 animate-ease-out"
                  : doorCategory == "Puertas giratorias"
                  ? "animate-spin animate-once animate-delay-0 animate-duration-300 animate-ease-out "
                  : "")}
            />
            <h1
              class="text-5xl hover:-translate-x-80 font-extrabold text-[#ffce00] uppercase font-[oswald] animate-fade-right animate-once animate-duration-500 animate-delay-300 animate-ease-out animate-normal"
            >
              {doorCategory}
            </h1>
          </div>
          <slot />
        </section>
      </section>
    </main>
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
    <slot name="script" />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "roboto", "Helvetica";
  }
  .active-tab {
    color: #ffce00;
    background-color: #ffffff08;
    border-radius: 5px;
  }
  .no-active-tab {
    color: #fff;
  }
  .no-active-tab:hover {
    color: #ffce00;
  }
  .scrolled {
    background-color: #00000080;
    backdrop-filter: saturate(180%) blur(12px);
    transition: background-color 0.4s ease-in-out;
  }
  .sap__text__slogan {
    backdrop-filter: blur(1px);
  }
  .text_border_convert {
    -webkit-text-stroke: 2px #fff;
    color: transparent;
  }
  .sap__text__slogan span {
    font-size: 4rem;
    font-weight: 900;
    -webkit-text-stroke: 2px #fff;
    color: transparent;
    letter-spacing: 2px;
  }
  .img-transform {
    -webkit-filter: grayscale(100%);
    filter: grayscale(100%);
  }
  .img-transform:hover {
    -webkit-filter: grayscale(0%);
    filter: grayscale(0%);
  }
  .bg-body {
    background-image: url(/assets/background_home_2.png) !important;
    background-color: #000000;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }
  body {
    background-color: #000000;
  }
</style>
<script>
  addEventListener("scroll", () => {
    const header = document.getElementById("landing-header");
    const scroll = window.scrollY;
    if (scroll > 0) {
      header.classList.add("scrolled");
    } else {
      header.classList.remove("scrolled");
    }
  });
  // Internet Explorer
  window.onload = function () {
    document.onselectstart = function () {
      return false;
    };
    // Firefox
    document.onmousedown = function () {
      return false;
    };
  };
</script>
