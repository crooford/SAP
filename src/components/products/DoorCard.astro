---
interface Props {
  title: string;
  imageUrl: string;
  imageAlt: string;
  url: string;
}
const { title, imageUrl, imageAlt, url } = Astro.props;
---

<div
  class="h-[420px] w-[580px] group relative cursor-pointer items-center justify-center transition-all ease-out animate-fade"
>
  <a href={url}>
    <div class="h-[420px] w-[580px]">
      <img
        class="h-full w-full object-cover  duration-[20ms] ease-in transition-all group-hover:scale-[1.01] rounded-sm aspect-video"
        src={imageUrl}
        alt={imageAlt}
      />
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-b from-transparent via-transparent"
    >
    </div>
    <div
      class="absolute inset-0 top-[95%] z-[100] text-center transition-all duration-300 ease-in-out group-hover:tracking-[0.5rem] lg:group-hover:tracking-[1rem] "
    >
      <h1 class="text-3xl md:text-4xl font-semibold uppercase text-white font-[oswald]">
        {title}
      </h1>
    </div>
  </a>
</div>
