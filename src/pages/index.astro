---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="SAP"
  HomeState="active"
  ProductosState=""
  ServiciosState=""
  CatalogoState=""
  NosotrosState=""
  OficinasState=""
  ContactoState=""
  BgBody="no"
>
  <main class="w-full h-screen text center relative overflow-hidden">
    <section class="absolute top-0 left-0 w-full h-full z-50 bg-black/80">
      <article class="w-full h-full flex flex-col justify-center items-center">
        <div
          class="mt-[13rem] mb-20 flex flex-col self-center items-center justify-center"
        >
          <div class="sap__text__slogan inline-flex">
            <span>SEGURIDAD</span>
            <span>CALIDAD</span>
            <span>PRESTIGIO</span>
          </div>
          <div class="w-[50rem]">
            <img src="/assets/linea.png" alt="divider line" />
          </div>
          <h1 class="text-white text-xl font-bold">SOLUCIONES EN ACCESOS</h1>
          <p class="text-white text-l font-ligth">
            Somos <span class="text-[#ffce00]">número uno</span> en puertas automáticas
            en todo México y el Caribe.
          </p>
          <p class="text-white text-l font-ligth">
            Conoce nuestros productos aquí.
          </p>
        </div>

        <section class="mr-40 ml-40 grid grid-cols-4 grid-rows-1">
          <div>
            <img
              src="/assets/Maria-Isabel-Hotel.jpg"
              alt="Maria Isabel Hotel"
              class="img-transform"
            />
          </div>
          <div>
            <img
              src="/assets/TorreMayor.jpg"
              alt="Torre Mayor Entrada"
              class="img-transform"
            />
          </div>
          <div>
            <img
              src="/assets/puerta-TorreMayor.jpg"
              alt="Torre Mayor puerta"
              class="img-transform"
            />
          </div>
          <div>
            <img
              src="/assets/puerta-two-TorreMayor.jpg"
              alt="Torre Mayor puerta 2"
              class="img-transform"
            />
          </div>
        </section>
      </article>
    </section>

    <section
      id="animation-carousel"
      class="relative w-full h-screen"
      data-carousel="slide"
    >
      <!-- Carousel wrapper -->
      <div class="relative h-screen overflow-hidden rounded-lg">
        <!-- Item 1 -->
        <div class="hidden duration-300 ease-linear" data-carousel-item>
          <img
            src="/assets/background_home.png"
            class="absolute block w-full cover -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
            alt="background"
          />
        </div>
        <!-- Item 2 -->
        <div class="hidden duration-200 ease-linear" data-carousel-item>
          <img
            src="/assets/background_home_2.png"
            class="absolute block w-full cover -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
            alt="background 2.."
          />
        </div>
        <!-- Item 3 -->
        <div
          class="hidden duration-200 ease-linear"
          data-carousel-item="active"
        >
          <img
            src="/assets/background_home_3.png"
            class="absolute block w-full cover -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
            alt="background 3.."
          />
        </div>
      </div>
    </section>
  </main>
  <script></script>
</Layout>
