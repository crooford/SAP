---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="SAP"
  HomeState="active"
  ProductosState=""
  ServiciosState=""
  CatalogoState=""
  NosotrosState=""
  OficinasState=""
  ContactoState=""
  BgBody="no"
>
  <main class="w-full min-h-screen text center relative overflow-hidden">
    <section class="absolute top-0 left-0 w-full h-full z-50 bg-black/80">
      <article class="w-full h-full">
        <div
          class="mt-[13rem] mb-20 flex flex-col self-center items-center justify-center"
        >
          <div
            class="lg:inline-flex flex flex-col md:flex-row items-center md:[&>span]:p-4  [&>span]:p-2 [&>span]:tracking-wider [&>img]:p-4 text-center md:text-left"
          >
            <span
              class="md:mr-4 font-[oswald] text_border_convert md:text-6xl text-5xl font-extrabold"
              >SEGURIDAD</span
            >
            <img
              src="/assets/arrow_right.png"
              alt="flecha direccion"
              class="w-[4.5rem] hidden md:block "
            />
            <span
              class="md:mr-4 font-[oswald] text-[#ffce00] md:text-6xl text-5xl font-extrabold"
              >CALIDAD</span
            >
            <img
              src="/assets/arrow_right.png"
              alt="flecha direccion"
              class="w-[4.5rem] hidden md:block"
            />
            <span
              class="font-[oswald] text_border_convert md:text-6xl text-5xl font-extrabold"
              >PRESTIGIO</span
            >
          </div>
          <div class="lg:w-[50rem] px-2">
            <img src="/assets/linea.png" alt="divider line" />
          </div>
          <h1 class="text-white text-xl font-bold font-[oswald]">
            SOLUCIONES EN ACCESOS
          </h1>
          <p class="text-white text-xl font-ligth text-center lg:text-left">
            Somos <span class="text-[#ffce00]">número uno</span> en puertas automáticas
            en todo México y el Caribe.
          </p>
          <p class="text-white text-xl font-ligth">
            Conoce nuestros productos aquí.
          </p>
        </div>

        <section class="md:mx-40 md:mt-40 px-8 grid lg:grid-cols-4 grid-cols-2  lg:grid-rows-1">
          <div>
            <a href="/producto/puertas-giratorias">
              <img
                src="/assets/puerta-servicio.webp"
                alt="Maria Isabel Hotel"
                class="img-transform"
              /></a
            >
          </div>
          <div>
            <a href="/producto/puertas-corredizas"
              ><img
                src="/assets/TorreMayor.jpg"
                alt="Torre Mayor Entrada"
                class="img-transform"
              /></a
            >
          </div>
          <div>
            <a href="/producto/puertas-batientes">
              <img
                src="/assets/puerta-TorreMayor.jpg"
                alt="Torre Mayor puerta"
                class="img-transform"
              /></a
            >
          </div>
          <div>
            <a href="/producto/puertas-telescopicas"
              ><img
                src="/assets/puerta-two-TorreMayor.jpg"
                alt="Torre Mayor puerta 2"
                class="img-transform"
              /></a
            >
          </div>
        </section>
      </article>
    </section>

    <section
      id="animation-carousel"
      class="relative w-full min-h-screen"
      data-carousel="slide"
    >
      <!-- Carousel wrapper -->
      <div class="relative min-h-screen overflow-hidden rounded-lg">
        <!-- Item 1 -->
        <div class="hidden duration-300 ease-linear" data-carousel-item>
          <img
            src="/assets/background_home.png"
            class="absolute block w-full object-cover h-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
            alt="background"
          />
        </div>
        <!-- Item 2 -->
        <div class="hidden duration-200 ease-linear" data-carousel-item>
          <img
            src="/assets/background_home_2.png"
            class="absolute block w-full object-cover h-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
            alt="background 2.."
          />
        </div>
        <!-- Item 3 -->
        <div
          class="hidden duration-200 ease-linear"
          data-carousel-item="active"
        >
          <img
            src="/assets/background_home_3.png"
            class="absolute block w-full object-cover h-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
            alt="background 3.."
          />
        </div>
      </div>
    </section>
  </main>
</Layout>
