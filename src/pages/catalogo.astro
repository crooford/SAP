---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="SAP | Catálogo"
  HomeState=""
  ProductosState=""
  ServiciosState=""
  CatalogoState="active"
  NosotrosState=""
  OficinasState=""
  ContactoState=""
  BgBody="yes"
>
  <main class="w-full min-h-screen h-screen top-0 left-0 flex items-center justify-center overflow-hidden">
    <section
      class=" bg-black/70 min-w-full flex absolute justify-center items-center my-center"
    >
      <div class="grid md:grid-cols-2  xs:grid-rows-2 gap-4 mx-auto mb-8 ">
        <article class="text-white p-6 grid grid-cols-1 grid-rows-3 ">
          <h1 class="text-[#ffce00] text-6xl font-bold pb-4 font-[oswald]">CATÁLOGO</h1>
          <p class=" text-xl">
            Te invitamos a descargar nuestro catálogo donde podrás <br> encontrar
            todos nuestros productos.
          </p>
          <a
            href="#"
            class="text-[#ffce00] font-semibold italic text-xl self-end">Descargar</a
          >
        </article>
        <div class="w-[700px]">
          <img
            class="object-cover scale-125 "
            src="/assets/service-catalog.jpg"
            alt="Torre Diana."
          />
        </div>
      </div>
    </section>
  </main>
</Layout>