<script>
  const objetivo = 20000;
  const duracion = 3000; // 5 segundos
  const intervalo = 10;  // ActualizaciÃ³n cada 10 ms
  const incremento = (objetivo / duracion) * intervalo;

  let contador = 0;
  const elemento = document.getElementById('counter');

  const actualizarContador = setInterval(() => {
      contador += incremento;
      if (contador >= objetivo) {
          contador = objetivo;
          clearInterval(actualizarContador);
      }
      elemento.textContent = Math.floor(contador).toString();
  }, intervalo);
</script>
