---
import "@fontsource/roboto/";
import "@fontsource-variable/oswald";

interface Props {
  title: string;
  BgBody: string;
  url: string;
}

const {
  title,
  BgBody,
  url,

} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Sistemas automaticos peatonales | Somos número uno en puertas
    automáticas en todo México y el Caribe."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/logo.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;400;700&family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class={BgBody === "yes" ? `bg-[url(${url})] bg-repeat bg-contain bg-center overflow-x-hidden min-h-screen` : "non-bg-body"} >
    <slot name="header"/>
    <slot />

    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"
    ></script>
    <slot name="tween"/>
    <slot name="ajax"/>
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "roboto","oswald","Helvetica";
  }
  .active-tab {
    color: #ffce00;
    border-bottom: #ffce00 solid 2px;
  }
  .no-active-tab {
    color: #fff;
    border-bottom: transparent;
    transition: all 0.15s linear;
  }
  .no-active-tab:hover {
    color: #ffce00;
    border-bottom: #ffce00 solid 2px;
  }
  .sap__text__slogan {
    backdrop-filter: blur(1px);
  }
  .text_border_convert {
    -webkit-text-stroke: 1px #fff;
    color: transparent;
  }
  .sap__text__slogan span {
    font-size: 4rem;
    font-weight: 900;
    -webkit-text-stroke: 2px #fff;
    color: transparent;
    letter-spacing: 2px;
  }
  .img-transform {
    -webkit-filter: grayscale(100%);
    filter: grayscale(100%);
  }
  .img-transform:hover {
    -webkit-filter: grayscale(0%);
    filter: grayscale(0%);
  }

  .non-bg-body {
    background-color: #000000;
    overflow-x: hidden;
  }

</style>
