---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="SAP | Catálogo"
  HomeState=""
  ProductosState=""
  ServiciosState=""
  CatalogoState="active"
  NosotrosState=""
  OficinasState=""
  ContactoState=""
  BgBody="yes"
>
  <main class="w-full min-h-screen h-screen top-0 left-0 flex flex-col lg:items-center lg:justify-center justify-between overflow-hidden">
    <section
      class=" bg-black/70 h-full lg:h-auto min-w-full flex md:absolute flex-col md:justify-center md:items-center lg:mt-20"
    >
      <div class="grid gap-12 lg:grid-cols-2 lg:gap-4 lg:mx-auto  w-screen lg:max-w-[980px] 2xl:max-w-[1250px] py-28 lg:py-0 ">
        <article class="text-white lg:py-8 2xl:py-12 grid gap-10 w-screen lg:w-[600px] lg:mr-16 2xl:mr-36 px-12">
          <h1 class="text-[#ffce00] 2xl:text-6xl text-5xl font-bold pb-4 font-[oswald]">CATÁLOGO</h1>
          <p class=" 2xl:text-xl text-lg mb-6">
            Te invitamos a descargar nuestro catálogo donde podrás  encontrar
            todos nuestros productos.
          </p>
          <a
            href="/assets/presentacion-sap.pdf" target="_blank"
            class="text-[#ffce00] font-semibold italic 2xl:text-xl text-lg self-end">Descargar</a
          >
        </article>
        <div class="2xl:w-[600px] w-[300px] md:w-[480px] lg:w-[380px] flex mx-auto">
          <img
            class="object-cover lg:scale-125 "
            src="/assets/service-catalog.jpg"
            alt="Torre Diana."
          />
        </div>
      </div>
      
    </section>
    <!-- <div class="p-4 grid place-items-end">
      <a type="link" href="/nosotros"><span class="text-white hover:text-[#ffce00]">Siguiente pagina</span></a>
    </div> -->
  </main>
</Layout>