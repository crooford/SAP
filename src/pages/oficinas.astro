---

<Layout
  title="SAP | Oficinas"
  HomeState=""
  ProductosState=""
  ServiciosState=""
  CatalogoState=""
  NosotrosState=""
  OficinasState="active"
  ContactoState=""
  BgBody="yes"
>
  <main class="w-full min-h-screen h-full lg:pt-40 2xl:pt-44">
    <section class="flex flex-col mx-auto lg:max-w-[980px] 2xl:max-w-[1400px]  bg-black/80 py-8 px-10 lg:px-8 lg:mb-10 pt-36 lg:pt-8">
      <header
        class="[&>p]:text-white [&>p]:mb-4 [&>p]:text-lg [&>p]:font-light mb-6"
      >
        <h1
          class="2xl::text-6xl text-5xl text-[#ffce00] uppercase font-extrabold mb-10 font-[oswald]"
        >
          {meta.title}
        </h1>
        <p>
          {meta.description.slice(0, 68)}
          <br class="hidden 2xl:block" />
          {meta.description.slice(69, 128)}
        </p>
        <p>
          {meta.description.slice(129, 188)}
        </p>
      </header>
      <div class="grid lg:grid-cols-2 2xl:grid-cols-3 lg:gap-6 gap-2 mb-10">
        {
          sedes.map((sede) => (
            <Place
              urlMaps = {sede.urlMaps}
              title={sede.name}
              address={sede.address}
              phone={sede.phone}
            />
          ))
        }
      </div>
      <p class="text-white text-lg font-light">{meta.footer}</p>
    </section>
  </main>
</Layout>
