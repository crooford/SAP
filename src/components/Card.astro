---
interface Props {
  title: string;
  src: string;
  alt: string;
}

const { title, src, alt } = Astro.props;
---

<div class="flex flex-col mr-6 ">
  <img src={src} alt={alt} class="w-[60px] mb-6 animate-fade-down animate-duration-500"/>
  <h2 class="uppercase text-4xl font-bold text-[#ffce00] mb-2 animate-fade animate-duration-300 animate-delay-300">{title}</h2>
  <slot />
</div>

