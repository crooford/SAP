---
import "@fontsource/roboto/";
import "@fontsource-variable/oswald";

interface Props {
  title: string;
  HomeState: string;
  ProductosState: string;
  ServiciosState: string;
  CatalogoState: string;
  NosotrosState: string;
  OficinasState: string;
  ContactoState: string;
  BgBody: string;
}

const {
  title,
  HomeState,
  ProductosState,
  ServiciosState,
  CatalogoState,
  NosotrosState,
  OficinasState,
  ContactoState,
  BgBody,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/assets/logo.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;400;700&family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,300&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;1,100&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
  </head>
  <body class={BgBody == "yes" ? "bg-body" : "non-bg-body"}>
    <header>
      <nav class="fixed top-0 w-full z-[100] pr-4 md:pr-0" id="landing-header">
        <div
          class="max-w-full flex flex-wrap items-center justify-between mx-auto"
        >
          <a href="/">
            <img src="/assets/logo.svg" alt="logo sap" class="h-20" />
          </a>
          <button
            data-collapse-toggle="navbar-default"
            type="button"
            class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-white rounded-lg md:hidden hover:bg-[#ffce00]"
            aria-controls="navbar-default"
            aria-expanded="false"
          >
            <span class="sr-only">Open main menu</span>
            <svg
              class="w-5 h-5"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 17 14"
            >
              <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 1h15M1 7h15M1 13h15"></path>
            </svg>
          </button>
          <div
            class="hidden w-full md:block md:w-auto bg-black md:bg-transparent"
            id="navbar-default"
          >
            <ul
              class="font-medium flex flex-col p-4 md:p-0 mt-4 md:flex-row md:space-x-8 md:mt-0 lg:[&>li>a]:px-5 lg:[&>li>a]:py-4 [&>li>a]:block [&>li>a]:py-2 [&>li>a]:px-4 [&>li>a]:uppercase"
            >
              <li>
                <a
                  class={HomeState == "active" ? "active-tab" : "no-active-tab"}
                  href="/">Home</a
                >
              </li>
              <li>
                <a
                  class={ProductosState == "active"
                    ? "active-tab"
                    : "no-active-tab"}
                  href="/productos">Productos</a
                >
              </li>
              <li>
                <a
                  class={ServiciosState == "active"
                    ? "active-tab"
                    : "no-active-tab"}
                  href="/servicios">Servicios</a
                >
              </li>
              <li>
                <a
                  class={CatalogoState == "active"
                    ? "active-tab"
                    : "no-active-tab"}
                  href="/catalogo">CAT√ÅLOGO</a
                >
              </li>
              <li>
                <a
                  class={NosotrosState == "active"
                    ? "active-tab"
                    : "no-active-tab"}
                  href="/nosotros">Nosotros</a
                >
              </li>
              <li>
                <a
                  class={OficinasState == "active"
                    ? "active-tab"
                    : "no-active-tab"}
                  href="/oficinas">Oficinas</a
                >
              </li>
              <li>
                <a
                  class={ContactoState == "active"
                    ? "active-tab"
                    : "no-active-tab"}
                  href="/contacto">Contacto</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <slot />
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"
    ></script>
  </body>
</html>
<style is:global>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "roboto", "Helvetica";
  }
  .active-tab {
    color: #ffce00;
    background-color: #00000075;
    border-radius: 5px;
  }
  .no-active-tab {
    color: #fff;
  }
  .no-active-tab:hover {
    color: #ffce00;
  }
  .sap__text__slogan {
    backdrop-filter: blur(1px);
  }
  .text_border_convert {
    -webkit-text-stroke: 2px #fff;
    color: transparent;
  }
  .sap__text__slogan span {
    font-size: 4rem;
    font-weight: 900;
    -webkit-text-stroke: 2px #fff;
    color: transparent;
    letter-spacing: 2px;
  }
  .img-transform {
    -webkit-filter: grayscale(100%);
    filter: grayscale(100%);
  }
  .img-transform:hover {
    -webkit-filter: grayscale(0%);
    filter: grayscale(0%);
  }
  .bg-body {
    background-image: url(/assets/background_home.png) !important;
    background-color: #000000;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
  }
  .non-bg-body {
    background-color: #000000;
  }
</style>
